package com.taxifleet.server.dao;

public abstract class DatabaseWatcher<T extends Table> implements Runnable {

	private long watchInterval;
	
	public DatabaseWatcher(long watchInterval) {
		this.watchInterval = watchInterval;
	}
	
	public abstract Tables<T> getModifyedTables();
	
	@Override
	public void run() {
		while (true) {
			watch();
			Thread.sleep(watchInterval);
		}
	}
	
	public abstract void watch();
	
}
