package com.taxifleet.server.dao;

import java.util.Iterator;
import java.util.List;

import org.hibernate.HibernateException;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.boot.registry.internal.StandardServiceRegistryImpl;
import org.hibernate.cfg.AnnotationConfiguration;
import org.hibernate.service.ServiceRegistry;

import com.taxifleet.server.dao.tables.Status;

public class DatabaseHandler {

	private static SessionFactory factory;

	@SuppressWarnings("deprecation")
	public static void main(String[] args) {
		try {
			factory = new AnnotationConfiguration().configure().
			// addPackage("com.xyz") //add package if used.
					addAnnotatedClass(Status.class).buildSessionFactory();
		
		} catch (Throwable ex) {
			System.err.println("Failed to create sessionFactory object." + ex);
			throw new ExceptionInInitializerError(ex);
		}
		DatabaseHandler dbHandler = new DatabaseHandler();

		/* Update employee's records */
//		dbHandler.updateEmployee(empID1, 5000);

		dbHandler.listStatus();

	}


	/* Method to READ all the employees */
	public void listStatus() {
		Session session = factory.openSession();
		Transaction tx = null;
		try {
			tx = session.beginTransaction();
			List<Status> statuses = session.createQuery("FROM dbo.Status").list();
			for (Iterator<Status> iterator = statuses.iterator(); iterator.hasNext();) {
				Status status = iterator.next();
				System.out.print("Placa: " + status.getPlaca());
				System.out.print("Latitude: " + status.getLatitude());
				System.out.println("Longitude: " + status.getLongitude());
				System.out.println("Disponibilidade: " + status.getDisponibilidade());
				System.out.println("Atualizado: " + status.getAtualizado());
			}
			tx.commit();
		} catch (HibernateException e) {
			if (tx != null)
				tx.rollback();
			e.printStackTrace();
		} finally {
			session.close();
		}
	}

	/* Method to UPDATE salary for an employee */
	public void updateEmployee(Integer EmployeeID, int salary) {
		Session session = factory.openSession();
		Transaction tx = null;
		try {
			tx = session.beginTransaction();
			Employee employee = (Employee) session.get(Employee.class,
					EmployeeID);
			employee.setSalary(salary);
			session.update(employee);
			tx.commit();
		} catch (HibernateException e) {
			if (tx != null)
				tx.rollback();
			e.printStackTrace();
		} finally {
			session.close();
		}
	}

}
